<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stevetran.pantryraider">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Home.HomeActivity"></activity>
        <activity android:name=".Pantry.PantryActivity"></activity>
        <activity android:name=".Search.SearchActivity"></activity>
        <activity android:name=".Setting.SettingActivity"></activity>
        <activity android:name=".Setting.ChangePasswordActivity"></activity>
        <activity android:name=".Setting.SetPreferencesActivity"></activity>
        <activity android:name=".Pantry.Ingredients.MyIngredientsActivity"></activity>
        <activity android:name=".Login.LoginActivity"></activity>
        <activity android:name=".Login.SignUpActivity"></activity>
        <activity android:name=".Search.Recipes.RecipeActivity"></activity>
        <activity android:name=".Pantry.Ingredients.IngredientAddActivity"></activity>
    </application>

</manifest>